<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/selected"
        android:drawable="@drawable/ic_round_star_24dp"
        android:state_checked="true" />

    <item
        android:id="@+id/unselected"
        android:drawable="@drawable/ic_round_star_border_24dp" />

    <transition
        android:drawable="@drawable/avd_star_unselected_to_selected"
        android:fromId="@id/unselected"
        android:toId="@id/selected" />

    <transition
        android:drawable="@drawable/avd_star_selected_to_unselected"
        android:fromId="@id/selected"
        android:toId="@id/unselected" />

</animated-selector>